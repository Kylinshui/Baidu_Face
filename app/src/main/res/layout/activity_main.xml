<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/feature_setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="特征模型设置"
        app:layout_constraintBottom_toBottomOf="@+id/image_match_image_btn"
        app:layout_constraintEnd_toStartOf="@+id/image_match_image_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_match_image_btn" />

    <Button
        android:id="@+id/image_match_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="52dp"
        android:text="图片VS图片"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/feature_setting_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/user_groud_manager_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="34dp"
        android:text="用户及组管理"
        app:layout_constraintEnd_toStartOf="@+id/video_identify_faces_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feature_setting_btn" />

    <Button
        android:id="@+id/video_identify_faces_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="视频流VS人脸库"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_groud_manager_btn"
        app:layout_constraintTop_toBottomOf="@+id/image_match_image_btn" />
</android.support.constraint.ConstraintLayout>