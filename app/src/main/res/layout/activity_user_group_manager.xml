<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bshui.baidu_face.UserGroupManagerActivity">

    <Button
        android:id="@+id/view_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="89dp"
        android:text="用户组查看"
        app:layout_constraintStart_toStartOf="@+id/add_group_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="用户组添加"
        app:layout_constraintStart_toStartOf="@+id/user_reg_btn"
        app:layout_constraintTop_toBottomOf="@+id/view_group_btn" />

    <Button
        android:id="@+id/user_reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="用户人脸注册"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_group_btn" />
</android.support.constraint.ConstraintLayout>
